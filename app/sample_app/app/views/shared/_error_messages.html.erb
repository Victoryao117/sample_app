<!--@user.errors.any?与empty?的意义相反-->
<% if @user.errors.any? %>
<div id="error_explanation">
	<div class="alert alert-error">
		<!--@user.errors.count代表错误的数量-->
		The form contains <%= pluralize(@user.errors.count, "error") %>.
	</div>
	<ul>
		<% @user.errors.full_messages.each do |msg| %>
		<li>* <%= msg %></li>
		<% end %>
	</ul>
</div>
<% end %>